    <input type="number" name="fiscalidentificador" id="fiscalidentificador" required placeholder="Informe o nÃºmero identificador" value="<%=fiscal.fiscalidentificador%>"><br>
    
    <label for="nome">Nome</label>
    <input type="text" name="nome" id="nome" required placeholder="Informe o nome" value="<%=fiscal.nome%>"><br>

    <input type="submit" value="Adicionar">
</form>
