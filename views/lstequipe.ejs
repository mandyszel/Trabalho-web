<%- include('cabecalho.ejs') %>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    form {
        width: 300px;
        margin: 0 auto;
        margin-bottom: 20px;
    }

    input[type="text"],
    input[type="submit"] {
        margin-bottom: 10px;
        width: calc(100% - 12px);
        padding: 6px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #4CAF50;
        color: white;
        cursor: pointer;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 20px;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<form method="post">
    <input type="text" name="pesquisar" id="pesquisar">
    <input type="submit" value="Pesquisar">
</form>

<table>
    <tr>
        <th>Identificador</th>
        <th>Nome</th>
        <th>Cor</th>
        <th>Ano</th>
        <th>Integrantes</th>
        <th>Editar</th>
        <th>Delete</th>
    </tr>

    <% equipe.forEach(function(equipe) { %>
        <tr>
            <td><%= equipe.equipeidentificador %></td>
            <td><%= equipe.nome %></td>
            <td><%= equipe.cor %></td>
            <td><%= equipe.ano %></td>
            <td><%= equipe.integrantes %></td>
            <td><a href="/edtequipe/<%= equipe._id %>">Editar</a></td>
            <td><a href="/delequipe/<%= equipe._id %>">Delete</a></td>
        </tr>
    <% }) %>
</table>

<%- include('rodape.ejs') %>
